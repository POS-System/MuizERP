<Window x:Class="MuizClient.Controls.Grid.GridFilter.GridFilterWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuizClient.Controls.Grid.GridFilter" xmlns:othercontrols="clr-namespace:MuizClient.Controls.OtherControls"
        mc:Ignorable="d"
        Title="GridFilterWindow" Height="450" Width="800">
    <Grid>
        <DockPanel VerticalAlignment="Stretch" LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Background="#FFE4E3E3">
                <Button Content="Применить" Click="Accept_Button_Click" />
                <Button Content="Отменить"/>
                <Button Content="Очистить фильтры" Click="Clear_Button_Click" />
            </StackPanel>

            <ScrollViewer>
                <othercontrols:CheckList x:Name="itemsControl">
                </othercontrols:CheckList>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
