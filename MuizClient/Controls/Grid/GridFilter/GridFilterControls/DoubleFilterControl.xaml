<local:BaseFilterControl x:Class="MuizClient.Controls.Grid.GridFilter.GridFilterControls.DoubleFilterControl"
             x:TypeArguments="fv:DoubleFilterValue, local:DoubleFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MuizClient.Controls.Grid.GridFilter.GridFilterControls"
             xmlns:fv="clr-namespace:MuizClient.Helpers.FilterValue" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel >
            <TextBlock Text="{Binding PropertyName}"/>

            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="lowerBox" Text="{Binding LowerValue}" MinWidth="50" />
                <TextBox x:Name="upperBox" Text="{Binding UpperValue}" MinWidth="50" />
            </StackPanel>
        </StackPanel>
    </Grid>
</local:BaseFilterControl>
